{
  "files.autoSave": "afterDelay",
  "liveServer.settings.donotShowInfoMsg": true,
  "peacock.vslsJoinColor": "#f9e64f",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "git.enableSmartCommit": true,
  "editor.codeActionsOnSave": {},
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "**/.git": false
  },
  //Silence the noise
  "breadcrumbs.enabled": true,
  "scm.diffDecorations": "all",
  "editor.hover.delay": 1500,
  "editor.hover.enabled": true,
  "editor.matchBrackets": "always",
  "workbench.tips.enabled": false,
  "editor.colorDecorators": true,
  "git.decorations.enabled": true,
  "workbench.startupEditor": "none",
  "editor.lightbulb.enabled": "on",
  "editor.selectionHighlight": true,
  "editor.overviewRulerBorder": true,
  "editor.renderLineHighlight": "gutter",
  "editor.occurrencesHighlight": "multiFile",
  "problems.decorations.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.hideCursorInOverviewRuler": false,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  // Typography
  "editor.fontFamily": "Monaspace Radon, Monospace",
  "editor.suggestFontSize": 16,
  "editor.suggestLineHeight": 30,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.fontSize": 15,
  "editor.fontWeight": "500",
  /**
   * Prettier
   **/
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "explorer.sortOrder": "type",
  "prettier.tabWidth": 4,
  "workbench.tree.indent": 15,
  "[html]": {
    "editor.defaultFormatter": "apility.beautify-blade",
    "editor.formatOnSave": true
  },
  "editor.wordWrapColumn": 120,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "editor.quickSuggestions": {
    "strings": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "editor.linkedEditing": true,
  "editor.formatOnSave": false,

  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
  "diffEditor.wordWrap": "on",
  "notebook.output.wordWrap": true,
  "editor.fontSize": 16,
  "editor.minimap.maxColumn": 250,
  "codesnap.containerPadding": "8em",
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 12px 24px",
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "editor.accessibilitySupport": "off",
  "chat.editor.wordWrap": "on",
  "editor.wordWrap": "wordWrapColumn",

  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.experimental.configFile": null,
  "editor.inlineSuggest.suppressSuggestions": true,
  "codesnap.showLineNumbers": true,
  "codesnap.roundedCorners": true,
  "editor.padding.top": 16,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  "editor.lineHeight": 22,
  "material-icon-theme.saturation": 1,
  "workbench.colorTheme": "Aura Dark",
  "workbench.iconTheme": "eq-material-theme-icons-light",
  "material-icon-theme.files.color": "#42a5f5",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.statusBar.visible": false,
  "editor.minimap.enabled": true,
  "material-icon-theme.activeIconPack": "nest",
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "none",
  "editor.showFoldingControls": "always",
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "explorer.compactFolders": false,
  "files.insertFinalNewline": true,
  "extensions.ignoreRecommendations": true,
  "terminal.integrated.fontFamily": "Monaspace Radon, Monospace",
  "terminal.integrated.tabs.enabled": true,
  "apc.electron": {
    "titleBarStyle": "hiddenInset"
  },
  "apc.header": {
    "height": 36
  },
  "apc.font.family": "Dank Mono, JetBrains Mono, Monospace",
  "apc.sidebar.titlebar": {
    "height": 0,
    "fontSize": 11,
    "fontFamily": "Dank Mono, Monospace"
  },
  "apc.listRow": {
    "lists": ["explorer-folders-view", "quick-input-list", "results"],
    "height": 25,
    "fontSize": 14
  },
  "apc.stylesheet": {
    ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #67D0FF 10%, $C45DFF 100%)",
    ".sidebar": "border: none !important",
    ".quick-input-widget": "transform: translateY(-50%) !important; top: 50% !important; box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.45) !important; padding: 10px 10px 18px 10px !important; background-image: linear-gradient(#12172e 0%, #2a2b38 100%) !important; backdrop-filter: blur(3px) !important; border-radius: 20px !important;",
    ".quick-input-filter .monaco-inputbox": "border-radius: 12px !important; padding: 8px !important; border: none !important; background-color: rgba(128, 0, 128, 0.4) !important; margin-bottom: 16px !important;",
    "#command-blur": "position: absolute; width: 100%; height: 100%; background: #C45DFF; top: 0; left: 0; backdrop-filter: blur(8px);"
  },
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [],
  "animations.CursorAnimation": true,
  "animations.Command-Palette": "Fade",
  "animations.CursorAnimationOptions": {
    "Color": "#C45DFF",
    "TrailLength": 1
  },
  "update.mode": "manual",
  "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "tabnine.experimentalAutoImports": true,
  "window.density.editorTabHeight": "compact"
}
